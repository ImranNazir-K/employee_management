<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name = "com.ideas2it.employeemanagement.model.Project" table = "projects">
        <id name = "projectId" type = "int" column = "project_id">
            <generator class="increment"/>
        </id>
      
        <property name = "projectName" type = "string" column = "name" not-null = "true"/>

        <property name = "projectDomain" type = "string" column = "domain" not-null = "true"/>

        <property name = "projectDescription" type = "string" column = "description" not-null = "true"/>

        <set name = "employees" table = "employee_project" lazy = "true" fetch = "select">
            <key column = "project_id" not-null = "true"/>
            <many-to-many class = "com.ideas2it.employeemanagement.model.Employee" column = "employee_id"/>
        </set>
   </class>
</hibernate-mapping>