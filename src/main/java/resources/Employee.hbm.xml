<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name = "com.ideas2it.employeemanagement.model.Employee" table = "employees">

        <id name = "employeeId" type = "int" column = "employee_id">
            <generator class="increment"/>
        </id>
      
        <property name = "employeeName" type = "string" column = "name" not-null = "true"></property>

        <property name = "employeeMailId" type = "string" column = "mailId" not-null = "true" unique = "true"></property>

        <property name = "employeeContactNumber" type = "long" column = "contactNumber" not-null = "true" unique = "true"></property>

        <property name = "employeeSalary" type = "double" column = "salary" not-null = "true"></property>

        <property name = "employeeDateOfBirth" type = "string" column = "date_of_birth" not-null = "true"></property>

        <set name = "projects" table = "employee_project" lazy = "true" fetch = "select">
            <key column = "employee_id" not-null = "true"/>
            <many-to-many class = "com.ideas2it.employeemanagement.model.Project" column = "project_id"/>
        </set>   
   </class>
</hibernate-mapping>